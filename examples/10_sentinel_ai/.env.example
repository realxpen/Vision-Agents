# Required credentials
STREAM_API_KEY=your_stream_api_key
STREAM_API_SECRET=your_stream_api_secret
OPENAI_API_KEY=your_openai_api_key
ROBOFLOW_API_KEY=your_roboflow_api_key

# Roboflow hosted models
ROBOFLOW_MODEL_ID=helmet-detection-k2v27-vgvft/1
ROBOFLOW_PHONE_MODEL_ID=cell-phone-d1wo9-e6hca/1

# Agent runtime
AGENT_IDLE_TIMEOUT_SECONDS=0
SENTINEL_USE_ROBOFLOW=1
SENTINEL_AUDIO_ONLY=0
SENTINEL_QUIET_LOGS=1

# Call matching (must match frontend + backend run command)
SENTINEL_FRONTEND_CALL_TYPE=default
SENTINEL_FRONTEND_CALL_ID=sentinel-live-001

# Detection classes
SENTINEL_YOLO_CLASSES=person,helmet,cell phone
SENTINEL_PERSON_CLASS=person
SENTINEL_HELMET_CLASS=helmet
SENTINEL_PHONE_CLASS=cell phone

# Detection confidence / behavior
SENTINEL_YOLO_CONF=0.20
SENTINEL_HELMET_CONF=0.10
SENTINEL_PHONE_CONF=0.85
SENTINEL_REQUIRE_PERSON=0
SENTINEL_REQUIRE_PERSON_FOR_PHONE=1
SENTINEL_PHONE_CONFIRM_FRAMES=3
SENTINEL_YOLO_FPS=2

# Loud noise thresholds
SENTINEL_NOISE_RMS_LOW=0.18
SENTINEL_NOISE_RMS_MEDIUM=0.28
SENTINEL_NOISE_RMS_HIGH=0.45
SENTINEL_NOISE_COOLDOWN=8

# Join retry behavior
SENTINEL_JOIN_RETRIES=1
SENTINEL_JOIN_RETRY_DELAY_SECONDS=3
